<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.updateprofile.UpdateProfileViewModel"
            />
        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/button_submit"
            >
            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="0dp"
                >
                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_side_nav_bar"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                    app:title="@string/edit_profile"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp_150"
                            android:layout_height="@dimen/dp_150"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/dp_10"
                            app:srcCompat="@drawable/ic_users"
                            tools:ignore="ContentDescription"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:layout_collapseMode="parallax"
                            bind:imageUrl="@{viewModel.avatar}"
                            tools:ignore="ContentDescription"
                            />
                    </FrameLayout>
                    <android.support.v7.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/AppTheme.PopupOverlay"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:onClick="@{viewModel::onClickArrowBack}"
                            android:paddingBottom="@dimen/dp_10"
                            android:paddingEnd="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_10"
                            app:srcCompat="@drawable/md_nav_back"
                            tools:ignore="ContentDescription"
                            />
                    </android.support.v7.widget.Toolbar>
                </android.support.design.widget.CollapsingToolbarLayout>
            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_placeholder_user"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <android.support.design.widget.TextInputLayout
                            bind:errorTextInputLayout="@{viewModel.employeeNameError}"
                            style="@style/StyleTextHintEditProfile"
                            >
                            <EditText
                                android:ellipsize="end"
                                android:hint="@string/employee_name"
                                android:maxLength="100"
                                android:maxLines="1"
                                android:text="@={viewModel.user.name}"
                                style="@style/StyleText"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_staff_code"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <android.support.design.widget.TextInputLayout
                            style="@style/StyleTextHintEditProfile"
                            >
                            <EditText
                                android:ellipsize="end"
                                android:hint="@string/employee_code"
                                android:maxLines="1"
                                android:text="@{viewModel.user.code}"
                                style="@style/StyleText"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_email"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <android.support.design.widget.TextInputLayout
                            style="@style/StyleTextHintEditProfile"
                            >
                            <EditText
                                android:ellipsize="end"
                                android:hint="@string/email"
                                android:maxLines="1"
                                android:text="@{viewModel.user.email}"
                                style="@style/StyleText"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="@{viewModel.visibleContractDate ? View.GONE : View.VISIBLE}"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_contract"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <android.support.design.widget.TextInputLayout
                            style="@style/StyleTextHintEditProfile"
                            >
                            <EditText
                                android:ellipsize="end"
                                android:hint="@string/contract_date"
                                android:maxLines="1"
                                android:text="@{viewModel.user.contractDate}"
                                style="@style/StyleText"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="@{viewModel.visibleStartProbation ? View.GONE : View.VISIBLE}"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_holiday_calendar"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <android.support.design.widget.TextInputLayout
                            style="@style/StyleTextHintEditProfile"
                            >
                            <EditText
                                android:ellipsize="end"
                                android:hint="@string/start_probation_date"
                                android:maxLines="1"
                                android:text="@{viewModel.user.startProbationDate}"
                                style="@style/StyleText"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="@{viewModel.visibleEndProbation ? View.GONE : View.VISIBLE}"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_holiday_calendar"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <android.support.design.widget.TextInputLayout
                            style="@style/StyleTextHintEditProfile"
                            >
                            <EditText
                                android:ellipsize="end"
                                android:hint="@string/end_probation_date"
                                android:maxLines="1"
                                android:text="@{viewModel.user.endProbationDate}"
                                style="@style/StyleText"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_group"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <android.support.design.widget.TextInputLayout
                            style="@style/StyleTextHintEditProfile"
                            >
                            <EditText
                                android:ellipsize="end"
                                android:hint="@string/staff_type"
                                android:maxLines="1"
                                android:text="@{viewModel.user.nameStaffType}"
                                style="@style/StyleText"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_position_name"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <android.support.design.widget.TextInputLayout
                            style="@style/StyleTextHintEditProfile"
                            >
                            <EditText
                                android:hint="@string/position"
                                android:text="@{viewModel.user.namePosition}"
                                style="@style/StyleText"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_being_handled_by"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <android.support.design.widget.TextInputLayout
                            style="@style/StyleTextHintEditProfile"
                            >
                            <EditText
                                android:ellipsize="end"
                                android:hint="@string/gender"
                                android:maxLines="1"
                                android:text="@{viewModel.user.gender}"
                                style="@style/StyleText"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_holiday_calendar"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <android.support.design.widget.TextInputLayout
                                style="@style/StyleTextHintEditProfile"
                                >
                                <EditText
                                    android:hint="@string/birday"
                                    android:onClick="@{viewModel::onPickDate}"
                                    android:paddingBottom="@dimen/dp_15"
                                    android:text="@={viewModel.birthday}"
                                    style="@style/StyleText"
                                    />
                            </android.support.design.widget.TextInputLayout>
                            <ImageView
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="@dimen/dp_15"
                                android:layout_gravity="center|end"
                                android:layout_marginEnd="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_10"
                                app:srcCompat="@drawable/ic_star"
                                tools:ignore="ContentDescription"
                                />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_56"
                android:layout_margin="@dimen/dp_16"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:onClick="@{viewModel::onClickPickAvatar}"
                android:tint="@color/color_white"
                app:layout_anchor="@id/appbar"
                app:layout_anchorGravity="bottom|right|end"
                app:srcCompat="@drawable/ic_camera"
                />

        </android.support.design.widget.CoordinatorLayout>

        <Button
            android:id="@id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_green"
            android:onClick="@{viewModel::onCickSubmit}"
            android:text="@string/submit"
            android:textColor="@color/color_white"
            />
    </RelativeLayout>

</layout>
