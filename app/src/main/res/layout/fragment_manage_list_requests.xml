<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.managelistrequests.ManageListRequestsViewModel"
            />
        <import type="android.view.View"/>

    </data>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:colorRes="@{@color/colorPrimaryDark}"
        app:enableSwipe="@{viewModel.refreshEnable}"
        app:refreshing="@{viewModel.loading}"
        bind:setOnRefreshListener="@{viewModel.onRefreshListener}"
        >
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                bind:addOnOffsetChangedListener="@{viewModel.onOffsetChangedListener}"
                >

                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:orientation="vertical"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            tools:ignore="UselessLeaf"
                            >
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            >
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_button_a"
                                android:onClick="@{viewModel::onCickFromTime}"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/dp_7"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:layout_marginStart="@dimen/dp_5"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:hint="@string/from_italic"
                                        android:maxLines="1"
                                        android:text="@{viewModel.fromTime}"
                                        android:textColor="@color/cardview_dark_background"
                                        android:textColorHint="@color/color_gray"
                                        />
                                </LinearLayout>
                            </FrameLayout>
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginStart="@dimen/dp_5"
                                android:layout_weight="1"
                                android:background="@drawable/border_button_a"
                                android:onClick="@{viewModel::onCickToTime}"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/dp_7"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:layout_marginStart="@dimen/dp_5"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:hint="@string/to_italic"
                                        android:maxLines="1"
                                        android:text="@{viewModel.toTime}"
                                        android:textColor="@color/cardview_dark_background"
                                        android:textColorHint="@color/color_gray"
                                        />
                                </LinearLayout>
                            </FrameLayout>
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginStart="@dimen/dp_5"
                                android:layout_weight="1"
                                android:background="@drawable/border_button_a"
                                android:onClick="@{viewModel::onPickTypeStatus}"
                                android:padding="@dimen/dp_7"
                                >
                                <ImageView
                                    android:layout_width="@dimen/dp_18"
                                    android:layout_height="@dimen/dp_18"
                                    android:layout_gravity="end"
                                    app:srcCompat="@drawable/ic_arrow_drop_down"
                                    tools:ignore="ContentDescription"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:hint="@string/choose_status"
                                    android:maxLines="1"
                                    android:text="@{viewModel.currentStatus}"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textColorHint="@color/cardview_shadow_start_color"
                                    />
                            </FrameLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/dp_7"
                            android:layout_marginTop="@dimen/dp_3"
                            >
                            <ImageButton
                                android:id="@+id/button_cancel"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="@dimen/dp_3"
                                android:layout_marginStart="@dimen/dp_3"
                                android:background="@drawable/border_button_a"
                                android:foregroundGravity=""
                                android:onClick="@{viewModel::onClickClearDataFilter}"
                                android:padding="@dimen/dp_2"
                                app:srcCompat="@drawable/ic_remove"
                                tools:ignore="ContentDescription"
                                />
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_toLeftOf="@+id/button_cancel"
                                android:layout_toStartOf="@+id/button_cancel"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="@dimen/dp_2"
                                    android:layout_marginRight="@dimen/dp_2"
                                    android:background="@drawable/border_button_a"
                                    android:gravity="center_vertical"
                                    tools:ignore="UselessParent"
                                    >
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_30"
                                        android:layout_marginEnd="@dimen/dp_35"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:layout_marginRight="@dimen/dp_35"
                                        android:layout_marginStart="@dimen/dp_5"
                                        android:background="@android:color/transparent"
                                        android:gravity="center_vertical"
                                        android:hint="@string/employee_name_italic"
                                        android:inputType="text"
                                        android:padding="@dimen/dp_7"
                                        android:text="@={viewModel.userName}"
                                        android:textColor="@color/cardview_dark_background"
                                        android:textColorHint="@color/cardview_shadow_start_color"
                                        android:textSize="@dimen/sp_15"
                                        />
                                </LinearLayout>
                                <ImageButton
                                    android:id="@+id/button_search"
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="end"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:background="@android:color/transparent"
                                    android:foregroundGravity=""
                                    android:onClick="@{viewModel::onClickSearch}"
                                    android:rotation="90"
                                    app:srcCompat="@drawable/ic_search"
                                    tools:ignore="ContentDescription"
                                    />
                            </FrameLayout>
                        </RelativeLayout>
                    </LinearLayout>

                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="?actionBarSize"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_56"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.visiableLayoutDataNotFound ? View.VISIBLE : View.GONE}"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_70"
                        app:srcCompat="@drawable/ic_not_found_data"
                        tools:ignore="ContentDescription"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@={viewModel.notificationData}"
                        android:textSize="@dimen/sp_17"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/progressBar"
                        android:clipToPadding="false"
                        android:paddingBottom="@dimen/dp_10"
                        app:layoutManager="LinearLayoutManager"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        app:recyclerAdapter="@{viewModel.manageListRequestsAdapter}"
                        />
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="@{viewModel.showProgress ? View.VISIBLE : View.GONE}"
                        />
                </RelativeLayout>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:background="@drawable/border_button_a"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_weight="0.2"
                    android:gravity="center_vertical"
                    android:onClick="@{viewModel::onSelectAll}"
                    android:orientation="horizontal"
                    >
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="@{viewModel.selectAll}"
                        android:onClick="@{viewModel::onSelectAll}"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="@{viewModel.totalRequestSelected}"
                        android:textSize="@dimen/sp_14"
                        />
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:background="@color/colorPrimary"
                    android:onClick="@{viewModel::onAcceptAll}"
                    android:text="@string/approve"
                    android:textColor="@color/color_white"
                    tools:ignore="ContentDescription"
                    />
            </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</layout>
