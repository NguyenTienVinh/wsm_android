<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.profile.ProfileViewModel"
            />

        <variable
            name="color"
            type="com.framgia.wsm.utils.binding.ColorManagers"
            />
        <import type="android.view.View"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                >
                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_side_nav_bar"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap|"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp_150"
                            android:layout_height="@dimen/dp_150"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_users"
                            tools:ignore="ContentDescription"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            bind:imageUrl="@{viewModel.avatar}"
                            tools:ignore="ContentDescription"
                            />
                    </FrameLayout>
                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_white_smoke"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_10"
                    >

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_80"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/color_black_white"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen1}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/employee_code"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:layout_marginTop="@dimen/dp_3"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{viewModel.user.code}"
                                    style="@style/StyleTextProfile"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen2}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/employee_name"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{viewModel.user.name}"
                                    style="@style/StyleTextProfile"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen3}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/mail"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{viewModel.user.email}"
                                    style="@style/StyleTextProfile"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen4}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/company"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:text="@{viewModel.user.company.companyName}"
                                    style="@style/StyleTextProfile"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            android:visibility="@{viewModel.visibleContractDate ? View.GONE : View.VISIBLE}"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen5}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/contract_date"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:layout_marginBottom="@dimen/dp_2"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{viewModel.contractDate}"
                                    style="@style/StyleTextProfile"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            android:visibility="@{viewModel.visibleStartProbation ? View.GONE : View.VISIBLE}"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen6}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/start_probation_date"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:text="@{viewModel.startProbationDate}"
                                    style="@style/StyleTextProfile"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            android:visibility="@{viewModel.visibleEndProbation ? View.GONE : View.VISIBLE}"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen7}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/end_probation_date"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{viewModel.endProbationDate}"
                                    style="@style/StyleTextProfile"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen8}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/position_name"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:text="@{viewModel.user.namePosition}"
                                    style="@style/StyleTextProfile"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen7}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/individual_code"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:text="@{viewModel.user.individualCode}"
                                    style="@style/StyleTextProfile"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen6}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/staff_type"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:text="@{viewModel.user.nameStaffType}"
                                    style="@style/StyleTextProfile"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen5}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/workspaces"
                                    style="@style/StyleTitleProfile"
                                    />
                                <android.support.v7.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/dp_3"
                                    app:layoutManager="LinearLayoutManager"
                                    app:recyclerAdapter="@{viewModel.branchAdapter}"
                                    bind:ignore="TooManyViews"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen4}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/group"
                                    style="@style/StyleTitleProfile"
                                    />
                                <android.support.v7.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/dp_3"
                                    app:layoutManager="LinearLayoutManager"
                                    app:recyclerAdapter="@{viewModel.groupAdapter}"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen3}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/gender"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{viewModel.user.gender}"
                                    style="@style/StyleTextProfile"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                app:circleColor="@{color.colorGreen2}"
                                style="@style/StyleCircleView"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/birthday"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{viewModel.birthday}"
                                    style="@style/StyleTextProfile"
                                    />
                                <View
                                    style="@style/StyleViewProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </android.support.v4.widget.NestedScrollView>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_56"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:clickable="true"
                android:onClick="@{viewModel::onClickEditProfile}"
                android:tint="@color/color_white"
                app:layout_anchor="@id/appbar"
                app:layout_anchorGravity="bottom|right|end"
                app:srcCompat="@drawable/ic_edit"
                />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_56"
                android:layout_marginEnd="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_80"
                android:clickable="true"
                android:onClick="@{viewModel::onClickChangePassword}"
                android:tint="@color/color_white"
                app:layout_anchor="@id/appbar"
                app:layout_anchorGravity="bottom|right|end"
                app:srcCompat="@drawable/ic_password"
                />
        </android.support.design.widget.CoordinatorLayout>

    </android.support.v7.widget.CardView>

</layout>
