<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.profile.ProfileViewModel"
            />

        <variable
            name="color"
            type="com.framgia.wsm.utils.binding.ColorManagers"
            />
        <import type="android.view.View"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >
            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_side_nav_bar"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                >
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax"
                    >
                    <com.framgia.wsm.widget.CircleImageView
                        android:id="@+id/image_avatar"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_20"
                        android:scaleType="centerCrop"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        bind:imageUrlUser="@{viewModel.avatar}"
                        tools:ignore="ContentDescription"
                        />
                    <TextView
                        android:id="@+id/text_title_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="@string/name"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold|italic"
                        app:layout_constraintLeft_toRightOf="@+id/image_avatar"
                        app:layout_constraintTop_toTopOf="@+id/image_avatar"
                        />
                    <TextView
                        android:id="@+id/text_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toRightOf="@+id/text_title_user_name"
                        app:layout_constraintTop_toTopOf="@+id/text_title_user_name"
                        bind:setInformationUser="@{viewModel.user.name}"
                        />
                    <TextView
                        android:id="@+id/text_title_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="@string/email_"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold|italic"
                        app:layout_constraintLeft_toLeftOf="@+id/text_title_user_name"
                        app:layout_constraintTop_toBottomOf="@+id/text_title_user_name"
                        />
                    <TextView
                        android:id="@+id/text_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toRightOf="@+id/text_title_email"
                        app:layout_constraintTop_toTopOf="@+id/text_title_email"
                        bind:setInformationUser="@{viewModel.user.email}"
                        />
                    <TextView
                        android:id="@+id/text_title_nationality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="@string/nationality"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold|italic"
                        app:layout_constraintLeft_toLeftOf="@+id/text_title_email"
                        app:layout_constraintTop_toBottomOf="@+id/text_email"
                        />
                    <TextView
                        android:id="@+id/text_nationality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toRightOf="@+id/text_title_nationality"
                        app:layout_constraintTop_toTopOf="@+id/text_title_nationality"
                        bind:setInformationUser="@{viewModel.user.generalInfo.nationality}"
                        />
                    <TextView
                        android:id="@+id/text_title_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="@string/gender_"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold|italic"
                        app:layout_constraintLeft_toLeftOf="@+id/text_title_nationality"
                        app:layout_constraintTop_toBottomOf="@+id/text_title_nationality"
                        />
                    <TextView
                        android:id="@+id/text_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toRightOf="@+id/text_title_gender"
                        app:layout_constraintTop_toTopOf="@+id/text_title_gender"
                        bind:setInformationUser="@{viewModel.user.gender}"
                        />
                    <TextView
                        android:id="@+id/text_title_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="@string/birthday_"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold|italic"
                        app:layout_constraintLeft_toLeftOf="@+id/text_title_gender"
                        app:layout_constraintTop_toBottomOf="@+id/text_title_gender"
                        />
                    <TextView
                        android:id="@+id/text_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toRightOf="@+id/text_title_birthday"
                        app:layout_constraintTop_toTopOf="@+id/text_title_birthday"
                        bind:setInformationUser="@{viewModel.birthday}"
                        />
                </android.support.constraint.ConstraintLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@drawable/border_textview_stroke_green"
                    android:padding="@dimen/dp_7"
                    android:text="@string/working_information"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/sp_12"
                    />
                <include
                    layout="@layout/layout_working_information"
                    bind:viewModel="@{viewModel}"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:gravity="center"
                    android:onClick="@{viewModel::onClickViewMore}"
                    android:padding="@dimen/dp_10"
                    android:text="@string/view_more"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_15"
                    android:visibility="@{viewModel.visibleLayoutWorkingOther ? View.GONE : View.VISIBLE}"
                    />
                <LinearLayout
                    android:id="@+id/layout_working_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    bind:setAnimation="@{viewModel.animation}"
                    bind:setVisible="@{viewModel.visibleLayoutWorkingOther}"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginStart="@dimen/dp_16"
                        android:background="@drawable/border_textview_stroke_green"
                        android:padding="@dimen/dp_7"
                        android:text="@string/other_information"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_12"
                        />
                    <include
                        layout="@layout/layout_working_other"
                        bind:viewModel="@{viewModel}"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:clickable="true"
            android:onClick="@{viewModel::onClickEditProfile}"
            android:tint="@color/color_white"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="bottom|right|end"
            app:srcCompat="@drawable/ic_edit"
            />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_marginEnd="@dimen/dp_80"
            android:layout_marginRight="@dimen/dp_80"
            android:clickable="true"
            android:onClick="@{viewModel::onClickChangePassword}"
            android:tint="@color/color_white"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="bottom|right|end"
            app:srcCompat="@drawable/ic_password"
            />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/float_button_up"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_gravity="bottom|right|end"
            android:layout_margin="@dimen/dp_16"
            android:clickable="true"
            android:tint="@color/color_white"
            app:srcCompat="@drawable/ic_arrow_up"
            bind:ignore="RtlHardcoded"
            />
    </android.support.design.widget.CoordinatorLayout>
</layout>
