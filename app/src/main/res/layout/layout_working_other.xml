<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.profile.ProfileViewModel"
            />
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/identification_passport"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/personal_email"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:ellipsize="end"
                    android:hint="@string/place_of_birth"
                    android:maxLines="2"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:ellipsize="end"
                    android:hint="@string/current_address"
                    android:maxLines="1"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:ellipsize="end"
                    android:hint="@string/permanent_address"
                    android:maxLines="2"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/marital_status"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/vehicle"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/bank_info"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/distance_from_office"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/home_phone"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/number_of_child"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/license_plate"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/account_id"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
