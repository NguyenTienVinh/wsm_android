<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.profile.ProfileViewModel"
            />
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                app:srcCompat="@drawable/ic_identity"
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/identification_passport"
                    bind:setInformationUser="@{viewModel.user.identifyInfo.code}"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                app:srcCompat="@drawable/ic_personal_email"
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/personal_email"
                    bind:setInformationUser="@{viewModel.user.generalInfo.personalMail}"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                app:srcCompat="@drawable/ic_place_of_birth"
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:ellipsize="end"
                    android:hint="@string/place_of_birth"
                    android:maxLines="2"
                    bind:setInformationUser="@{viewModel.user.address.placeOfBirth}"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                app:srcCompat="@drawable/ic_current_address"
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:ellipsize="end"
                    android:hint="@string/current_address"
                    android:maxLines="1"
                    bind:setInformationUser="@{viewModel.user.address.currentAddress}"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                app:srcCompat="@drawable/ic_permanent_address"
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:ellipsize="end"
                    android:hint="@string/permanent_address"
                    android:maxLines="2"
                    bind:setInformationUser="@{viewModel.user.address.permanentAddress}"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                app:srcCompat="@drawable/ic_marital_status"
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/marital_status"
                    bind:setInformationUser="@{viewModel.user.generalInfo.marriedStatus}"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                app:srcCompat="@drawable/ic_vehicle"
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/vehicle"
                    bind:setInformationUser="@{viewModel.user.vehicleInfo.vehicleType}"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                app:srcCompat="@drawable/ic_bank_info"
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/bank_info"
                    bind:setInformationUser="@{viewModel.user.bankInfo.bankName}"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                app:srcCompat="@drawable/ic_distance_from_office"
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/distance_from_office"
                    android:text="@{viewModel.distanceFromOffice}"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                app:srcCompat="@drawable/ic_home_phone"
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/home_phone"
                    bind:setInformationUser="@{viewModel.user.generalInfo.homePhoneNumber}"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                app:srcCompat="@drawable/ic_number_of_child"
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/number_of_child"
                    bind:setInformationUser="@{String.valueOf(viewModel.user.generalInfo.numberOfChildrent)}"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                app:srcCompat="@drawable/ic_license_plate"
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/license_plate"
                    bind:setInformationUser="@{viewModel.user.vehicleInfo.licensePlate}"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                app:srcCompat="@drawable/ic_account_id"
                tools:ignore="ContentDescription"
                style="@style/StyleIconConfirm"
                />
            <android.support.design.widget.TextInputLayout
                style="@style/StyleTextHintEditProfile"
                >
                <EditText
                    android:hint="@string/account_id"
                    bind:setInformationUser="@{viewModel.user.bankInfo.accountId}"
                    style="@style/StyleText"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
