<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:backgroundTint">@color/cardview_shadow_start_color</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="StyleEditableText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:backgroundTint">@color/cardview_shadow_start_color</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
    </style>

    <style name="StyleTextHint">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:layout_marginStart">@dimen/dp_5</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="StyleTitleExample">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:layout_marginStart">@dimen/dp_5</item>
        <item name="android:textColor">@color/color_black_transparent</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="StyleImageDropDown">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:src">@drawable/ic_arrow_drop_down</item>
    </style>

    <style name="StyleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/color_green_dark_transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StyleIconConfirm">
        <item name="android:layout_width">@dimen/dp_30</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="StyleTitleConfirm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="StyleTextConfirm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:textSize">@dimen/sp_17</item>
    </style>

    <style name="StyleLinearLayoutConfirmRequestOff">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:layout_marginStart">@dimen/dp_5</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="StyleTextConfirmRequestOff">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="StyleTextNumberConfirmRequestOff">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:textColor">@color/color_gray_cod</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleViewConfirm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="StyleTitleProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black_transparent</item>
        <item name="android:textSize">@dimen/sp_17</item>
    </style>

    <style name="StyleTextProfile">
        <item name="android:layout_marginTop">@dimen/dp_3</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="StyleLinearLayoutProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="StyleTextHintEditProfile">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
    </style>

    <style name="StyleSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="TextLabelInputLayout" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/sp_17</item>
    </style>

    <style name="StyleStatus">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="StyleButtonActionFilter">
        <item name="android:layout_width">@dimen/dp_70</item>
        <item name="android:layout_height">@dimen/dp_35</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
    </style>

    <style name="StyleImageDateTime">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:src">@drawable/ic_calendar</item>
        <item name="android:layout_marginRight">@dimen/dp_5</item>
        <item name="android:layout_marginEnd">@dimen/dp_5</item>
    </style>

    <style name="StyleCircleView">
        <item name="android:layout_width">@dimen/dp_20</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_2</item>
    </style>

    <style name="StyleViewProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:layout_marginTop">@dimen/dp_2</item>
        <item name="android:background">@color/color_gray_light</item>
    </style>

</resources>
